{% extends 'base.html.twig' %}
{% block title %}Liste des contacts{% endblock %}
{% block stylesheets %}{% endblock %}
{% block body %}
<table class="ui table">
    <caption>Contacts</caption>
{% for c in contacts.getAll %}
    <tr>
        <td>{{ c.nom }}</td>
        <td>{{ c.prenom }}</td>
        <td>{{ c.mail }}</td>
        <td>{{ c.tel }}</td>
        <td>{{ c.mobile }}</td>
        <td>
            <a href="{{  path('contact_display',{"index": loop.index}) }}" class="ui icon button xs">
                <i class="eye icon"></i>
            </a>
            <a href="{{  path('contact_edit',{"index": loop.index}) }}" class="ui icon button xs">
                <i class="write icon"></i>
            </a>
            <a href="{{  path('contact_delete') }}" class="ui icon button xs">
                <i class="trash icon"></i>
            </a>
        </td>
    </tr>
{% endfor %}
</table>
{% endblock %}
{% block javascripts %}{% endblock %}